        "@typescript-eslint/parser": "4.19.0",
        "babel-loader": "8.2.2",
        "cross-env": "7.0.3",
        "eslint": "7.22.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-webpack-plugin": "2.5.2",
        "nodemon": "2.0.7",
        "rifraf": "2.0.3",
        "terser-webpack-plugin": "5.1.1",
