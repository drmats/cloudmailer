    },
    "description": "A (very) small-scale transactional email service.",
    "devDependencies": {
        "@babel/cli": "^7.12.1",
        "@babel/core": "^7.12.3",
        "@babel/eslint-parser": "^7.12.1",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-typescript": "^7.12.1",
        "@types/node": "^14.14.6",
        "@types/nodemailer": "^6.4.0",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "babel-loader": "^8.1.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.13.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.22.1",
        "nodemon": "^2.0.6",
        "rifraf": "^2.0.3",
        "terser-webpack-plugin": "^5.0.3",
        "typescript": "^4.0.5",
        "webpack": "^5.4.0",
        "webpack-cli": "^4.2.0",
        "webpack-node-externals": "^2.5.2"
    },
    "files": [
        "src"
    ],
    "homepage": "https://github.com/drmats/cloudmailer",
    "keywords": [
        "email",
        "transactional"
    ],
    "license": "BSD-2-Clause",
    "name": "@xcmats/cloudmailer",
    "private": true,
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/drmats/cloudmailer.git"
    },
    "scripts": {
        "build": "cross-env BABEL_ENV=production webpack --config=webpack.config.prod.js",
        "build:dev": "cross-env BABEL_ENV=development webpack --config=webpack.config.dev.js",
        "build:types": "tsc --emitDeclarationOnly",
        "contBuild": "nodemon -e js,ts --watch ./src/ --exec \"npm run build:dev\"",
        "clean": "rimraf ./dist",
        "clean:modules": "rimraf package-lock.json && rimraf node_modules",
        "lint": "echo \"Linting and typechecking...\" && eslint ./src/ --ext .js,.ts && npm run type-check",
        "start": "node ./dist/cloudmailer.js",
        "test": "echo \"Warning: no tests specified (yet)\"",
        "type-check": "tsc --noEmit"
    },
    "sideEffects": false,
    "version": "0.0.1"
}
